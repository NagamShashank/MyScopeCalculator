<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyNavigationComponent.FragmentOne"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is Fragment 1 "
        android:gravity="center"
        android:layout_above="@id/Fragment2Btn"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/Fragment2Btn"
        android:text="Move to Fragment 2"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/Fragment3Btn"
        android:text="Move to Fragment 3"
        android:layout_below="@id/Fragment2Btn"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"/>


</RelativeLayout>